<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Routepage"
    android:background="#E4E4E4"
    >
    <TextView
        android:id="@+id/routing_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="Routing"
        android:textStyle="normal"
        android:textAlignment="center"
        android:paddingVertical="5dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="28dp"
        android:background="@drawable/select_station_bg"
        />
    <ImageButton
        android:id="@+id/back_button_routing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_icon_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/routing_text"
        app:layout_constraintBottom_toBottomOf="@id/routing_text"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:layout_marginLeft="15dp"
        />
    <include
        layout="@layout/nav_bar"
        android:id="@+id/nav_bar"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/map_card"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/routing_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/black"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            >
            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map_2"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/map_card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#1C1C1C"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/map_your_route_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map Your Route Here"
                android:textSize="26dp"
                android:fontFamily="@font/cabin_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/source_location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source Location"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/map_your_route_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:textColor="#BEBEBE"
                android:textStyle="bold"
                />
            <SearchView
                android:id="@+id/search_view_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/source_location_text"
                android:background="@drawable/search_view"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:queryHint="Search Location"
                android:iconifiedByDefault="false"
                android:queryBackground="@android:color/transparent"
                />
            <TextView
                android:id="@+id/destination_location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination Location"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/search_view_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="15dp"
                android:textColor="#BEBEBE"
                android:textStyle="bold"
                />
            <SearchView
                android:id="@+id/search_view_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/destination_location_text"
                android:background="@drawable/search_view"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:queryHint="Search Location"
                android:iconifiedByDefault="false"
                android:queryBackground="@android:color/transparent"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/login_card"
                android:text="Get Route"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@id/search_view_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>