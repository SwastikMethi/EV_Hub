<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Select_EV"
    android:background="#E4E4E4"
    >
    <TextView
        android:id="@+id/select_ev_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="Select Your EV"
        android:textStyle="normal"
        android:textAlignment="center"
        android:paddingVertical="5dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="28dp"
        android:background="@drawable/select_station_bg"
        />
    <ImageButton
        android:id="@+id/back_button_select_ev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_icon_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/select_ev_text"
        app:layout_constraintBottom_toBottomOf="@id/select_ev_text"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:layout_marginLeft="15dp"
        />
    <include
        layout="@layout/nav_bar"
        android:id="@+id/nav_bar"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/select_ev_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="15dp"
        app:cardElevation="0dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMW X7"
                android:textSize="24dp"
                android:fontFamily="@font/cabin_bold"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/car_image"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/charger_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charger Type"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/car_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/car_image"
                android:layout_marginTop="2dp"
                android:textColor="@color/green"
                />
            <ImageView
                android:id="@+id/car_image"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/bmw_img"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleX="-1"
                android:layout_margin="5dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="@drawable/button_02"
                android:text="Select"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:fontFamily="@font/average_sans"
                app:layout_constraintTop_toBottomOf="@id/charger_type_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/car_image"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="15dp"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_options_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>