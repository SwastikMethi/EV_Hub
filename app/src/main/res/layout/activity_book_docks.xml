<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Book_docks"
    android:background="#E4E4E4"
    >
    <include
        android:id="@+id/nav_bar"
        layout="@layout/nav_bar"
        />
    <TextView
        android:id="@+id/select_station"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="Select a Station"
        android:textStyle="normal"
        android:textAlignment="center"
        android:paddingVertical="5dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30dp"
        android:background="@drawable/select_station_bg"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/select_station"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        android:layout_marginTop="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/station_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kadini Biotech"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/station_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Station Address"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#7A7A7A"
                app:layout_constraintTop_toBottomOf="@id/station_name"
                app:layout_constraintLeft_toLeftOf="@id/station_name"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/available_connectors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Connectors"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/booking_available"
                app:layout_constraintRight_toLeftOf="@id/total_connectors"
                app:layout_constraintBottom_toBottomOf="@id/booking_available"
                android:layout_marginRight="4dp"
                />
            <TextView
                android:id="@+id/total_connectors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3/3"
                app:layout_constraintTop_toTopOf="@id/available_connectors"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="#28D257"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                />
            <ImageView
                android:id="@+id/location"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/location"
                app:layout_constraintTop_toBottomOf="@id/station_address"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/kms"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/kms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/location"
                app:layout_constraintLeft_toRightOf="@id/location"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 AM - 11:59 PM"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/kms"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/booking_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#28D257"
                app:layout_constraintTop_toBottomOf="@id/kms"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/book_now"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/button_02"
                app:layout_constraintTop_toBottomOf="@id/booking_available"
                android:layout_marginTop="10dp"
                android:text="Book Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="visible"
                />
            <TextView
                android:id="@+id/selected_time_slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time Slot:"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/booking_available"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="start"
                android:textSize="16dp"
                android:textStyle="italic"
                app:layout_constraintLeft_toRightOf="@id/selected_time_slot"
                app:layout_constraintTop_toTopOf="@id/selected_time_slot"
                android:layout_marginLeft="10dp"
                android:textColor="#1DC64C"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to"
                android:textSize="16dp"
                app:layout_constraintLeft_toRightOf="@id/start"
                app:layout_constraintTop_toTopOf="@id/start"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="end"
                android:textSize="16dp"
                android:textStyle="italic"
                app:layout_constraintLeft_toRightOf="@id/to"
                app:layout_constraintTop_toTopOf="@id/to"
                android:layout_marginLeft="10dp"
                android:textColor="#1DC64C"
                android:visibility="gone"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/dock_card_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/selected_time_slot"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                android:visibility="gone"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:id="@+id/car_charger_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/car_charger"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />
                    <TextView
                        android:id="@+id/charger_type_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DC Fast"
                        android:textSize="14dp"
                        app:layout_constraintTop_toBottomOf="@id/car_charger_02"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/price_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: ₹7.7/unit"
                        android:textSize="12dp"
                        android:layout_marginTop="2dp"
                        app:layout_constraintTop_toBottomOf="@id/charger_type_02"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/reserve_btn_02"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/button_05"
                        android:text="Reserve"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/price_02"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="5dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/dock_card_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/selected_time_slot"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/dock_card_02"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                android:visibility="gone"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:id="@+id/car_charger_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/car_charger"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />
                    <TextView
                        android:id="@+id/charger_type_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DC Fast"
                        android:textSize="14dp"
                        app:layout_constraintTop_toBottomOf="@id/car_charger_01"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/price_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: ₹7.7/unit"
                        android:textSize="12dp"
                        android:layout_marginTop="2dp"
                        app:layout_constraintTop_toBottomOf="@id/charger_type_01"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/reserve_btn_01"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/button_05"
                        android:text="Reserve"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/price_01"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="5dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/dock_card_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/selected_time_slot"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/dock_card_02"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                android:visibility="gone"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:id="@+id/car_charger_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/car_charger"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />
                    <TextView
                        android:id="@+id/charger_type_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DC Fast"
                        android:textSize="14dp"
                        app:layout_constraintTop_toBottomOf="@id/car_charger_03"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/price_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: ₹7.7/unit"
                        android:textSize="12dp"
                        android:layout_marginTop="2dp"
                        app:layout_constraintTop_toBottomOf="@id/charger_type_03"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/reserve_btn_03"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/button_05"
                        android:text="Reserve"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/price_03"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="5dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <ImageButton
                android:id="@+id/minimize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minimize"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dock_card_02"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardview_01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/station_name_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EVCD Direct"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/station_address_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Station Address"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#7A7A7A"
                app:layout_constraintTop_toBottomOf="@id/station_name_02"
                app:layout_constraintLeft_toLeftOf="@id/station_name_02"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/available_connectors_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Connectors"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/booking_available_02"
                app:layout_constraintRight_toLeftOf="@id/total_connectors_02"
                app:layout_constraintBottom_toBottomOf="@id/booking_available_02"
                android:layout_marginRight="4dp"
                />
            <TextView
                android:id="@+id/total_connectors_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/3"
                app:layout_constraintTop_toTopOf="@id/available_connectors_02"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="#F12516"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                />
            <ImageView
                android:id="@+id/location_02"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/location"
                app:layout_constraintTop_toBottomOf="@id/station_address_02"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/kms_02"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/kms_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/location_02"
                app:layout_constraintLeft_toRightOf="@id/location_02"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/time_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 AM - 11:59 PM"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/kms_02"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/booking_available_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unavailable"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#F12516"
                app:layout_constraintTop_toBottomOf="@id/kms_02"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/button_02"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/booking_available_02"
                android:layout_marginTop="10dp"
                android:text="Book Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="gone"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>