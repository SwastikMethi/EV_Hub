<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_WalletPage"
    android:background="#E4E4E4"
    >
    <include
        android:id="@+id/nav_bar"
        layout="@layout/nav_bar"
        />
    <TextView
        android:id="@+id/payment_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="Payments Wallet"
        android:textStyle="normal"
        android:textAlignment="center"
        android:paddingVertical="5dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="28dp"
        android:background="@drawable/select_station_bg"
        />
    <ImageButton
        android:id="@+id/back_button_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_icon_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/payment_wallet"
        app:layout_constraintBottom_toBottomOf="@id/payment_wallet"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:layout_marginLeft="15dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/wallet_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/payment_wallet"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        app:cardElevation="0dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/wallet_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet Balance"
                android:fontFamily="@font/cabin_bold"
                android:textSize="22dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_semibold"
                android:text="â‚¹ 12567.45"
                android:textColor="#767575"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/wallet_balance"
                app:layout_constraintTop_toBottomOf="@id/wallet_balance"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/current_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="current balance"
                android:textSize="14dp"
                android:textColor="#767575"
                app:layout_constraintTop_toBottomOf="@id/amount"
                app:layout_constraintLeft_toLeftOf="@id/amount"
                android:textStyle="normal"
                android:fontFamily="@font/average_sans"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/recharge_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recharge Wallet"
                android:textSize="16dp"
                android:textColor="@color/green"
                android:fontFamily="@font/archivo_semibold"
                app:layout_constraintTop_toBottomOf="@id/current_balance"
                app:layout_constraintLeft_toLeftOf="@id/current_balance"
                android:layout_marginTop="13dp"
                />
            <TextView
                android:id="@+id/see_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See Transactions"
                android:textSize="16dp"
                android:textColor="@color/green"
                android:fontFamily="@font/archivo_semibold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/recharge_wallet"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/subscription_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/wallet_card"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        app:cardElevation="0dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/subscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subscription"
                android:fontFamily="@font/cabin_bold"
                android:textSize="22dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_semibold"
                android:text="No Subscription Active"
                android:textColor="#767575"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/subscription"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/details_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textSize="16dp"
                android:textColor="@color/green"
                android:fontFamily="@font/archivo_semibold"
                app:layout_constraintTop_toBottomOf="@id/detail"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="13dp"
                />
            <TextView
                android:id="@+id/more_subscriptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More Subscriptions"
                android:textSize="16dp"
                android:textColor="@color/green"
                android:fontFamily="@font/archivo_semibold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/details_btn"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/subscription_card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        />
    <TextView
        android:id="@+id/other_options_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Payment Options"
        android:fontFamily="@font/cabin_bold"
        android:textSize="22dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="15dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/upi_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/other_options_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay using UPI"
                android:fontFamily="@font/archivo_semibold"
                android:textColor="#767575"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="10dp"
                />
            <ImageButton
                android:id="@+id/expand_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minimize"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="10dp"
                android:scaleY="0.8"
                android:scaleX="0.8"
                android:rotation="180"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/credit_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/upi_card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay using Credit Card / Net Banking"
                android:fontFamily="@font/archivo_semibold"
                android:textColor="#767575"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="10dp"
                />
            <ImageButton
                android:id="@+id/expand_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minimize"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="10dp"
                android:scaleY="0.8"
                android:scaleX="0.8"
                android:rotation="180"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/wallet_paycard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/credit_card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay using Wallet"
                android:fontFamily="@font/archivo_semibold"
                android:textColor="#767575"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="10dp"
                />
            <ImageButton
                android:id="@+id/expand_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minimize"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="10dp"
                android:scaleY="0.8"
                android:scaleX="0.8"
                android:rotation="180"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>