<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".Activity_LoginPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup"
        android:fontFamily="sans-serif-black"
        android:text="Sign Up"
        android:textSize="40dp"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/archivo_semibold"
        android:text="as"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_profile"
        android:scaleType="fitCenter"
        android:src="@drawable/user_profile"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@id/as"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        />


    <ImageButton
        android:id="@+id/company_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/company"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@id/as"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleY="0.67"
        android:scaleX="0.67"
        android:src="@drawable/management"
        app:layout_constraintRight_toRightOf="@id/company_profile"
        app:layout_constraintLeft_toLeftOf="@id/company_profile"
        app:layout_constraintBottom_toBottomOf="@id/company_profile"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginBottom="73dp"
        android:layout_marginLeft="6dp"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleY="0.65"
        android:scaleX="0.65"
        android:src="@drawable/single_account"
        app:layout_constraintRight_toRightOf="@id/user_profile"
        app:layout_constraintLeft_toLeftOf="@id/user_profile"
        app:layout_constraintBottom_toBottomOf="@id/user_profile"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginBottom="72dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/account"
        android:text="Already have an account?"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_profile"
        android:layout_marginTop="90dp"
        android:layout_marginRight="38dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:text="Login"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/account"
        android:textColor="#1A92E8"
        app:layout_constraintTop_toBottomOf="@id/user_profile"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="9dp"
        android:clickable="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/skip_text"
        android:text="Skip for now >"
        android:textColor="#1A92E8"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/account"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:shadowColor="@color/black"
        android:clickable="true"/>




</androidx.constraintlayout.widget.ConstraintLayout>